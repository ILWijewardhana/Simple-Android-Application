<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_background"
    android:orientation="vertical"
    tools:context=".ScrolActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tb" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:text="Hello Isuru"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/search_view"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="69dp"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/search_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bioButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="BIOLOGY"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/comButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="COMBIND"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/chemButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="CHEMISTRY"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/phyButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="PHYSICS"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />
        </LinearLayout>


    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="Accounts"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="ECON"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="Busyness Study"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_gradient"
                android:text="LOGIC"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />
        </LinearLayout>


    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="SINHALA"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="HISTORY"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_gradient"
                android:text="Political Science"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_gradient"
                android:text="LOGIC"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />
        </LinearLayout>


    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/t2" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/t3" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/t4" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/t1" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

